<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tigase.messenger.phone.pro"
    android:versionCode="11"
    android:versionName="1.5.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:name="org.tigase.mobile.MessengerApplication"
        android:allowBackup="false"
        android:backupAgent="android.app.backup.BackupAgentHelper"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="org.tigase.mobile.roster.ContactActivity"
            android:excludeFromRecents="true"
            android:label="Contact details"
            android:theme="@style/XTheme.Light"
       		>
        </activity>
        <activity
            android:name="org.tigase.mobile.accountstatus.AccountsStatusActivity"
            android:label="@string/accounts"
            android:theme="@style/XTheme.Light" >
        </activity>
        <activity
            android:name="org.tigase.mobile.muc.OccupantsListActivity"
            android:label="@string/muc_occupants_list_title"
            android:theme="@style/XTheme.Light" >
        </activity>
        <activity
            android:name="org.tigase.mobile.muc.MucActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/XTheme.Light" >
        </activity>
        <activity
            android:name="org.tigase.mobile.bookmarks.BookmarksActivity"
            android:label="@string/bookmarks"
            android:theme="@style/XTheme.Light" >
        </activity>
        <activity
            android:name="org.tigase.mobile.chat.ChatActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/XTheme.Light" >
        </activity>        
        <activity
            android:name="org.tigase.mobile.chatlist.ChatListActivity"
            android:label="@string/chat_list_title"
            android:theme="@style/XTheme.Light" >
        </activity>
        <activity
            android:name="org.tigase.mobile.vcard.VCardViewActivity"
            android:label="@string/contact_details"
            android:theme="@style/XTheme.Light" >
        </activity>
        <activity
            android:name="org.tigase.mobile.roster.AuthRequestActivity"
            android:label="Auth request"
            android:theme="@style/XTheme.Light" >
        </activity>
        <activity
            android:name="org.tigase.mobile.roster.ContactEditActivity"
            android:label="@string/contact_editor"
            android:theme="@style/XTheme.Light" >
        </activity>
        <activity
            android:name="org.tigase.mobile.TigaseMobileMessengerActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/XTheme.Light.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="jabber"
                    android:scheme="imto" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tigase.mobile.preferences.MessengerPreferenceActivity"
            android:label="@string/preferencesTitle" >
            <intent-filter>
                <action android:name="org.tigase.mobile.MessengerPreferenceActivity" />

                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>

        <!-- AuthenticatorActivity -->
        <activity
            android:name="org.tigase.mobile.authenticator.AuthenticatorActivity"
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:label="@string/ui_authenticator_activity_title"
            android:theme="@style/XTheme" >
            <intent-filter>
                <action android:name="org.tigase.mobile.account.preference.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tigase.mobile.vcard.VCardEditorActivity"
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:label="@string/vcard_editor_activity_title" >
            <intent-filter>
                <action android:name="org.tigase.mobile.account.personalInfo.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tigase.mobile.preferences.AccountAdvancedPreferencesActivity"
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:label="@string/account_advanced_preferences">
            <intent-filter>
                <action android:name="org.tigase.mobile.account.advancedPreferences.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tigase.mobile.preferences.AccountPreferenceActivity"
            android:configChanges="orientation"
            android:label="@string/account_advanced_preferences"
            android:theme="@style/XTheme" >
        </activity>
        <activity android:name="org.tigase.mobile.filetransfer.SendFileActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="video/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tigase.mobile.filetransfer.IncomingFileActivity"
            android:label="@string/incoming_file"
            android:theme="@style/XTheme" >
        </activity>

        <!-- The authenticator service -->
        <service
            android:name="org.tigase.mobile.authenticator.AuthenticationService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name="org.tigase.mobile.sync.SyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <service android:name="org.tigase.mobile.service.JaxmppService" >
        </service>

        <receiver
            android:name="org.tigase.mobile.BootUpReceiver"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <provider
            android:name="org.tigase.mobile.db.providers.RosterProvider"
            android:authorities="org.tigase.mobile.db.providers.RosterProvider" >
        </provider>
        <provider
            android:name="org.tigase.mobile.db.providers.ChatHistoryProvider"
            android:authorities="org.tigase.mobile.db.providers.ChatHistoryProvider" >
        </provider>

        <service
            android:name="org.tigase.mobile.service.ExtXmppService"
            android:exported="true" >
            <intent-filter>
                <action android:name="org.tigase.mobile.service.ExtXmppService" />
            </intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- additional permissions -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>