<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="@dimen/contact_layout_width"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/contact_layout_padding"
        android:paddingTop="@dimen/contact_layout_padding" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/contact_avatar_height"
            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar" />

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:background="#BF333333"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:text="Andrzej WÃ³jcik"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:indeterminate="true"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:background="#BF333333"
        android:paddingBottom="1dp"
        android:paddingLeft="20dp"
        android:paddingTop="1dp"
        android:singleLine="true"
        android:text="Main developer"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/org"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="#BF333333"
        android:paddingBottom="1dp"
        android:paddingLeft="20dp"
        android:paddingTop="1dp"
        android:singleLine="true"
        android:text="Tigase, Inc."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="@dimen/contact_layout_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/org"
        android:padding="4dp" >

        <Button
            android:id="@+id/chat_btn"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_menu_start_conversation"
            android:background="@android:color/transparent"
            android:text="@string/chat" >
        </Button>
        
        <View
            android:id="@+id/line_1"
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray" />
        
		<Button
            android:id="@+id/share_btn"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_share"
            android:background="@android:color/transparent"
            android:text="@string/shareButton" >
        </Button>
    </LinearLayout>
    <!--
         <ListView
        android:id="@+id/resources_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buttons_layout" >

    </ListView>
    -->

    <LinearLayout
        android:id="@+id/phone_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons_layout"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        
        android:orientation="vertical" >

        <!-- Phone values from VCard -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:text="Telephone"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <ListView 
            android:id="@+id/listLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" ></ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_layout"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        android:orientation="vertical" >

        <!-- Email values from VCard -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <ListView 
            android:id="@+id/listLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" ></ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locality_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_layout"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        android:orientation="vertical" >

        <!-- Locality values from VCard -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <ListView 
            android:id="@+id/listLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" ></ListView>
    </LinearLayout>

</RelativeLayout>