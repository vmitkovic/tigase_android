<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="5px">
<ImageView android:id="@+id/image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:src="@drawable/icon"/>
<TextView android:id="@+id/appNameText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/image" android:gravity="center" android:text="@string/app_name" android:textSize="20sp" android:textStyle="bold"/>
<TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/appNameText" android:layout_centerHorizontal="true" android:layout_marginTop="19px" android:text="@string/account_add_description"/>
<Button android:id="@+id/welcomeScreenAddAccountsButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textView1" android:layout_centerHorizontal="true" android:layout_marginTop="59px" android:paddingLeft="20dp" android:paddingRight="20dp" android:text="@string/account_add_login"/>
<Button android:id="@+id/welcomeScreenCreateAccountsButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/welcomeScreenAddAccountsButton" android:layout_centerHorizontal="true" android:layout_marginTop="29px" android:paddingLeft="20dp" android:paddingRight="20dp" android:text="@string/account_add_create"/>
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/welcomeScreenCreateAccountsButton" android:layout_centerHorizontal="true">
<TextView android:id="@+id/aboutTermsOfService" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="22sp" android:text="@string/termsOfService"/>
<TextView android:id="@+id/aboutPrivacyPolicy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingLeft="12sp" android:paddingTop="22sp" android:text="@string/privacyPolicy"/>
</LinearLayout>
</RelativeLayout>