<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_left_drawer_item_account"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/main_left_drawer_item_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp" 
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/main_left_drawer_item_text"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="0dp"
        android:textColor="#f0f0f0"
        android:layout_toRightOf="@+id/main_left_drawer_item_icon"
        android:layout_toLeftOf="@+id/main_left_drawer_item_switch"
        android:text="TextView" />
    
    <CheckBox
        android:id="@+id/main_left_drawer_item_switch"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="6dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true" />
    
</RelativeLayout>
