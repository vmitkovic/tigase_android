<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5px" >

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/chat_item_layout_item_avatar_size"
        android:layout_height="@dimen/chat_item_layout_item_avatar_size"
        android:layout_alignParentRight="true"
        android:src="@drawable/user_avatar" />
        
    <ImageView
        android:id="@+id/user_avatar_arrow"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_toRightOf="@+id/chat_item_content"
        android:src="@drawable/chat_arrow_right" />   
          
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toLeftOf="@+id/user_avatar"
    android:id="@+id/chat_item_content" 
    android:background="@color/message_mine_simple_background">
    <TextView
        android:id="@+id/chat_item_timestamp"
        android:textSize="12sp"
        android:text="yesterday, 10:30pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"        
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:layout_alignRight="@+id/chat_item_body" >
    </TextView>

    <!--
		android:layout_alignParentTop="true" 
		android:layout_alignBottom="@+id/user_avatar"
    -->
    <ImageButton
        android:id="@+id/actionButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/chat_item_nickname"
        android:src="@android:drawable/ic_menu_save"
        android:background="@null" />

    <TextView
        android:id="@+id/chat_item_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_item_nickname"
        android:layout_toLeftOf="@+id/actionButton"
        android:autoLink="all"
        android:padding="3dp"
        android:text="Sharing file xsusgss.png">
    </TextView>

    <TextView
        android:id="@+id/chat_item_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="5px"
        android:textStyle="bold" >
    </TextView>

    <ImageView
        android:id="@+id/msgStatus"
        android:layout_width="18px"
        android:layout_height="18px"
        android:layout_alignBottom="@+id/chat_item_timestamp"
        android:layout_alignTop="@+id/chat_item_timestamp"
        android:layout_toLeftOf="@+id/chat_item_timestamp"
        android:src="@drawable/message_not_sent" />
    </RelativeLayout>



</RelativeLayout>