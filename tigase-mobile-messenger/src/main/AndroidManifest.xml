<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tigase.messenger.phone.pro"
    android:versionCode="15"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- additional permissions -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:name="org.tigase.messenger.phone.pro.MessengerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_actionbar_icon"
        android:theme="@style/AppTheme" >
        
        <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />
        
        <activity
            android:name="MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tigase.messenger.phone.pro.account.AuthenticatorActivity"
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:label="@string/ui_authenticator_activity_title" >
            <intent-filter>
                <action android:name="org.tigase.messenger.phone.pro.account.preference.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chat.ChatActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".preferences.MessengerPreferenceActivity"
            android:label="@string/preferencesTitle" >
            <intent-filter>
                <action android:name="org.tigase.messenger.phone.pro.MessengerPreferenceActivity" />

                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".preferences.AccountAdvancedPreferencesActivity"
            android:configChanges="orientation"
            android:excludeFromRecents="true"
            android:label="@string/account_advanced_preferences" >
            <intent-filter>
                <action android:name="org.tigase.messenger.phone.pro.account.advancedPreferences.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".preferences.AccountPreferenceActivity"
            android:configChanges="orientation"
            android:label="@string/account_advanced_preferences" >
        </activity>
        <activity
            android:name=".muc.OccupantsListActivity"
            android:configChanges="orientation"
            android:label="@string/muc_occupants_list_title" >
        </activity>
        <activity android:name=".share.ShareActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="audio/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
		<activity
            android:name=".share.IncomingFileActivity"
            android:label="@string/incoming_file" >
        </activity>
        <activity 
            android:name=".vcard.VCardEditorActivity"
            android:label="@string/vcard_editor_activity_title">
        	<intent-filter>
                <action android:name="org.tigase.messenger.phone.pro.account.personalInfo.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <service
            android:name="org.tigase.messenger.phone.pro.service.JaxmppService"
            android:process=":JaxmppService" >
        </service>
        <service android:name=".account.AuthenticatorService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name=".sync.SyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <receiver
            android:name=".BootUpReceiver"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".db.providers.RosterProvider"
            android:authorities="org.tigase.messenger.phone.pro.db.providers.RosterProvider"
            android:multiprocess="true" >
        </provider>
        <provider
            android:name=".db.providers.ChatHistoryProvider"
            android:authorities="org.tigase.messenger.phone.pro.db.providers.ChatHistoryProvider"
            android:multiprocess="true" >
        </provider>
        <provider
            android:name=".db.providers.OpenChatsProvider"
            android:authorities="org.tigase.messenger.phone.pro.db.providers.OpenChatsProvider"
            android:multiprocess="true" >
        </provider>
        <provider
            android:name=".db.providers.GeolocationProvider"
            android:authorities="org.tigase.messenger.phone.pro.db.providers.GeolocationProvider"
            android:multiprocess="true" >
        </provider>

        <receiver android:name=".receivers.AvatarUpdatedReceiver" >
            <intent-filter>
                <action android:name="org.tigase.messenger.phone.pro.AvatarUpdated" />
            </intent-filter>
        </receiver>
    </application>

</manifest>